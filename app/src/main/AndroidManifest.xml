<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.brightcreations.ibeaconposition.android"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true"/>
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true"/>

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission-sdk-23 android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.brightcreations.ibeaconposition.ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.brightcreations.ibeaconposition.ui.activities.MonitoringActivity">
        </activity>
        <activity android:name="com.brightcreations.ibeaconposition.ui.activities.RangingActivity">
        </activity>

        <service android:name="com.brightcreations.ibeaconposition.service.MonitoringService"/>
    </application>

</manifest>
